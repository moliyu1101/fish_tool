# 应用配置
DEBUG=True
SECRET_KEY=your_secret_key_here
PORT=5000

# 资源下载设置
# 设置为False将不下载任何图片/CSS/JS，节省空间但影响克隆质量
DOWNLOAD_RESOURCES=True 
# 最大超时时间（秒）
REQUEST_TIMEOUT=10
# 请求延迟范围（秒）
MIN_REQUEST_DELAY=0.5
MAX_REQUEST_DELAY=1.5

# 安全设置
# 启用后会加密保存捕获的数据
ENCRYPT_CAPTURED_DATA=False
# 启用后需要登录才能访问管理页面
ENABLE_AUTH=False
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123 